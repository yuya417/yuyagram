.container
  .comments
    .comment-header
      %p 
        Comment
    .comment-header-back-image
      = link_to root_path do
        %i.fas.fa-arrow-left.fa-2x
    .comments-container{id: "#{@article.id}"}
  .add-comment
    .comment-area
      .comment-submit-btn
        = button_tag type: :submit do
          = image_tag "comment.png"
      .comment-text-area
        = text_area_tag :comment_content, '', class:'sm'
